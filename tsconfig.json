{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./publish/es",
    "strict": false,
    "declaration": true,
    "declarationDir": "./publish/@types",
    "strictFunctionTypes": false,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "dashkit-ui": ["./src/"]
    }
  },
  "include": [
    "./custom.d.ts",
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
