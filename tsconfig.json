{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "./publish/es",
    "strict": false,
    "declaration": true,
    "declarationDir": "./publish/@types",
    "strictFunctionTypes": false,
    "baseUrl": ".",
    "sourceMap": false,
    "paths": {
      "dashkit-ui": ["./src"]
    }
  },
  "include": ["./src/**/*", "./custom.d.ts"],
  "exclude": [
    "node_modules"
  ]
}
